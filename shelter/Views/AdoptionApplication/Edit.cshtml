@model shelter.Models.AdoptionApplicationViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Donation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-AnimalId="@Model.IdAnimal" asp-route-UserId="@Model.IdUser" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdStatus" class="control-label"></label>
                <select asp-for="IdStatus" class="form-control">
                    @foreach (AdoptionStatusViewModel kind in Model.adoptionStatusViewModels)
                    {
                        <option value="@kind.Id">@kind.Name</option>
                    }
                </select>
            </div>
                        <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}