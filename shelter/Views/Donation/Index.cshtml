@model shelter.Models.DonationIndexModel

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>User</th>
            <th>Donation Amount</th>
            <th class="actions">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.donationViewModels)
        {
            <tr>
                <td>@item.DateOf.ToShortDateString()</td>
                <td>@item.UserName</td>
                <td>@item.Donation1</td>
                <td class="actions">
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
