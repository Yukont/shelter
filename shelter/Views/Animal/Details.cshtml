@model AnimalViewModel

@{
    ViewData["Title"] = "Animal Details";
}

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.Photo" alt="@Model.Name" class="img-fluid rounded mb-3" />
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Species</dt>
                    <dd class="col-sm-8">@Model.SpeciesName</dd>

                    <dt class="col-sm-4">Age</dt>
                    <dd class="col-sm-8">@Model.Age</dd>

                    <dt class="col-sm-4">Gender</dt>
                    <dd class="col-sm-8">@Model.GenderName</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">@Model.AnimalStatusName</dd>

                    <dt class="col-sm-4">Health Status</dt>
                    <dd class="col-sm-8">@Model.StatusOfHealthName</dd>

                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.DescriptionOfAnimal</dd>

                    <dt class="col-sm-4">Date</dt>
                    <dd class="col-sm-8">@Model.DateOf</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <form asp-action="Delete" asp-route-id="@Model.Id" class="d-inline">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete?')">Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
