@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="error-container">
    <div class="error-content">
        <h1 class="error-title">Oops! Something went wrong.</h1>
        <p class="error-message">We encountered an error while processing your request.</p>

        @if (Model.ShowRequestId)
        {
            <p class="error-request-id">
                <strong>Error ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <div class="development-mode">
            <h3>Development Mode</h3>
            <p>
                Enabling <strong>Development</strong> environment will provide more detailed error information.
            </p>
            <p>
                <strong>Warning:</strong> Enabling <strong>Development</strong> environment in a deployed application may expose sensitive information.
                It's recommended to disable it for production environments.
            </p>
        </div>
    </div>
</div>
